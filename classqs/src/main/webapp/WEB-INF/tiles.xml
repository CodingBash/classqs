<tiles-definitions>
	<!-- Base tile definition -->
	<definition name="base.definition" template="/WEB-INF/views/layouts/layout.jsp">
		<put-attribute name="title" value="" />
		<put-list-attribute name="commonScripts">
			<add-attribute value="scripts" />
			<add-attribute value="scripts" />
			<add-attribute value="scripts" />
		</put-list-attribute>
		<put-list-attribute name="commonStyles">
			<add-attribute value="styles" />
			<add-attribute value="styles" />
			<add-attribute value="styles" />
		</put-list-attribute>
	</definition>

	<!-- Index page tile parameters -->
	<definition name="index" extends="base.definition">
		<put-attribute name="title" value="ClassQs- Home Page" />
		<put-attribute name="pageContent" value="/WEB-INF/views/pages/home.jsp" />
		<put-list-attribute name="pageScripts">
			<add-attribute value="scripts" />
			<add-attribute value="scripts" />
			<add-attribute value="scripts" />
		</put-list-attribute>
		<put-list-attribute name="pageStyles">
			<add-attribute value="styles" />
			<add-attribute value="styles" />
			<add-attribute value="styles" />
		</put-list-attribute>
	</definition>
</tiles-definitions>